<?xml version="1.0" encoding="UTF-8" ?>
<Module>
	<ModulePrefs title="ジャンプ地獄">
		<Require feature="opensocial-0.8" />
		<Require feature="dynamic-height" />
	</ModulePrefs>
	
	
	
	<Content type="url" view="touch" href="http://jump-hell.appspot.com/jump_hell/" />
	<Content type="html"><![CDATA[
		<style>
			body {
				background-color: #000;
			}
			#app-page {
				text-align: center;
			}
			#app-message {
				background-color: #440;
				color: #fff;
				position: absolute;
				top: 0px;
				z-index: 255;
				width: 100%;
				font-size: 12px;
			}
			#app-main-frame {
				margin: auto;
				width: 480px;
				height: 640px;
				border-style: solid;
			}
		</style>
		<div id="app-main">
			<div id="app-page"></div>
			<div id="app-message"></div>
		</div>
		
		<script type="text/javascript" src="http://osakana4242.sakura.ne.jp/res/js/gadget_mixi.js?v=20120926_1"></script>
		<script type="text/javascript">
			(function(window) {
				"use strict";
				var osakana4242 = window.osakana4242 || {};
				function init() {
					var url = "http://jump-hell.appspot.com/jump_hell/?pc=1";
					osakana4242.mixi.get(url);
				}
				gadgets.util.registerOnLoadHandler(init);
			}(window));
		</script>		
		
	]]></Content>
</Module>
